{
  "hideColumnHeader": true,
  "rowFormatter": {
    "elmType": "div",
    "style": {
      "display": "flex",
      "flex-direction": "row",
      "align-content": "start",
      "flex-wrap": "wrap",
      "padding-left": "=if(@rowIndex % 2 == 0,'5px','')",
      "padding-right": "=if(@rowIndex % 2 == 0,'','5px')",
      "width": "100%",
      "background-color": "#f0f0f0",
      "direction": "=if(@rowIndex % 2 == 0,'ltr','rtl')"
    },
    "attributes": {
      "class": "ms-fontColor-themePrimary"
    },
    "children": [
      {
        "elmType": "img",
        "style": {
          "border-radius": "50px",
          "width": "150px",
          "height": "150px",
          "border": "solid",
          "border-color": "currentColor",
          "border-width": "thick"
        },
        "attributes": {
          "src": "='/_layouts/15/userphoto.aspx?size=L&username='+[$BusinessLead.email]"
        },
        "defaultHoverField": "[$BusinessLead]"
      },
      {
        "elmType": "span",
        "style": {
          "display": "flex",
          "align-content": "start",
          "align-self": "stretch",
          "border": "solid",
          "border-color": "currentColor",
          "border-radius": "10px",
          "border-width": "thick",
          "font-family": "fangsong",
          "font-size": "large",
          "height": "100px",
          "margin-left": "=if(@rowIndex % 2 == 0,'-8px','none')",
          "margin-right": "=if(@rowIndex % 2 == 0,'none','-8px')",
          "margin-top": "25px",
          "max-width": "400px",
          "width": "auto",
          "padding": "3px",
          "border-left": "=if(@rowIndex % 2 == 0,'none','')",
          "border-right": "=if(@rowIndex % 2 == 0,'','none')"
        },
        "children": [
          {
            "elmType": "svg",
            "style": {
              "width": "=if(@rowIndex % 2 == 0,'50px','0px')",
              "height": "50px",
              "padding-left": "=if(@rowIndex % 2 == 0,'10px','0px')"
            },
            "children": [
              {
                "elmType": "path",
                "style": {
                  "width": "100%",
                  "height": "50px",
                  "display": "=if(@rowIndex % 2 == 0,'','none')"
                },
                "attributes": {
